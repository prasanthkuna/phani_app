option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SECRET_KEY: "generate-a-secure-key-here"  # Will help you generate this
    DJANGO_DEBUG: "False"
    ALLOWED_HOSTS: ".elasticbeanstalk.com"
    CORS_ALLOWED_ORIGINS: "https://*.amplifyapp.com"
    AWS_STORAGE_BUCKET_NAME: "your-bucket-name"  # Change this in AWS console
    AWS_S3_REGION_NAME: "us-east-1" 

  # Database configuration will be auto-set by Elastic Beanstalk
  aws:rds:dbinstance:
    DBEngine: postgres
    DBEngineVersion: 15.3
    DBInstanceClass: db.t3.micro
    DBUser: ebroot
    DBPassword: "auto-generated"  # Will be auto-generated by EB 